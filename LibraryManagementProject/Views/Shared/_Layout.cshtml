                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            
                        </button>
                        <h1><a href="index.html">Library Management System</a></h1>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-left">
                            <li><a asp-controller="Home" asp-action="Index" class="w3ls-hover active">Home</a></li>
                            <li><a asp-controller="Books" asp-action="Index" class="btn w3ls-hover">Books</a></li>
                            <li>
                                <a asp-controller="Authors" asp-action="Index" class="dropdown-toggle btn w3ls-hover" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Authors <span class="caret"></span></a>
