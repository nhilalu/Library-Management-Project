                                    @foreach (var author in DbContext.Authors)
                                    {
                                        <li><a asp-controller="Authors" asp-action="Details" asp-route-id="@author.AuthorId">@author.AuthorName</a></li>
                                    }
                                </ul>
                            </li>
                            <li><a asp-controller="Lends" asp-action="Index" class="btn w3ls-hover">Lended Books</a></li>
                            <li>
                                <a asp-controller="Categories" asp-action="Index" class="dropdown-toggle btn w3ls-hover" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    @foreach (var category in DbContext.Categories)
                                    {
                                        <li><a asp-controller="Categories" asp-action="Details" asp-route-id="@category.CategoryId">@category.CategoryName</a></li>
                                    }
                                </ul>
                            </li>
                            <li><a asp-controller="UserManager" asp-action="Index" class="btn w3ls-hover">User Manager</a></li>
                        </ul>
                        @Html.Partial("_LoginPartial")

                        <div class="clearfix"> </div>
                    </div><!-- //navbar-collapse -->
                </div><!-- //container-fluid -->
            </nav>
        </div>


        <div class="container">
            <partial name="_CookieConsentPartial" />
            <main role="main" class="pb-3">
